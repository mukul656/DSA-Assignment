class Solution {
public:
int f(TreeNode* root, int& dia){
    if(root == NULL) return 0;
    int lh = f(root -> left , dia);
    int rh = f(root -> right , dia);
    dia = max(lh+rh,dia);
    return 1+max(lh , rh);
}
    int diameterOfBinaryTree(TreeNode* root) {
        int dia = 0;
        f(root , dia);
        return dia;
    }
};

class Solution {
private:
    void f(TreeNode* root , vector<int>& ans , int lvl){
        if(root == NULL) return;
        if(ans.size() == lvl) ans.push_back(root -> val);
        f(root -> left , ans , lvl + 1);
        f(root -> right , ans , lvl + 1);
    }
public:
    vector<int> rightSideView(TreeNode* root) {
        vector<int> ans;
        if(root == NULL) return ans;
        f(root , ans , 0);
        return ans;
    }
};

class Solution {
  public:
    int upperBound(vector<int>& arr, int target) {
        // code here
        int low = 0 , high = arr.size() - 1;
        int ans = -1;
        while(low <= high){
            int mid = (low + high)/2;
            if(arr[mid] > target){
                ans = mid;
                high = mid - 1;
            }
            else low = mid + 1;
        }
        if(ans == -1) return arr.size();
        return ans;
    }
};

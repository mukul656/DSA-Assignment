class Solution {
public:
    int maxArea(vector<int>& h) {
        int n = h.size();
        int i = 0 , j = n - 1;
        int maxArea = 0;

        while(i < j){
            int dis = j - i;
            int area = dis * min(h[i] , h[j]);
            maxArea = max(area , maxArea);
            if(h[i] < h[j]) i++;
            else j--;
        }
        return maxArea;
    }
};
